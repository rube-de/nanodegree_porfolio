<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity"
    android:orientation="vertical">



    <TextView android:text="@string/my_nanodegree_apps" android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/textView"
        android:textSize="24dp"
        android:layout_gravity="center_vertical|center_horizontal"
        android:textAlignment="center"
        android:gravity="center"/>

    <Space
        android:layout_width="match_parent"
        android:layout_height="20dp" />

    <Button
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:text="@string/spotify_streamer"
        android:id="@+id/button0"
        android:layout_below="@+id/textView"
        android:textSize="18dp"
        android:layout_gravity="center_vertical|center_horizontal"
        android:background="@drawable/button"
        android:onClick="clickSpotify"/>
    <Space
        android:layout_width="match_parent"
        android:layout_height="5dp" />
    <Button
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:text="@string/scores_app"
        android:id="@+id/button1"
        android:layout_below="@+id/textView"
        android:textSize="18dp"
        android:layout_gravity="center_vertical|center_horizontal"
        android:background="@drawable/button"
        android:onClick="clickScoresApp"/>
    <Space
        android:layout_width="match_parent"
        android:layout_height="5dp" />
    <Button
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:text="@string/library_app"
        android:id="@+id/button2"
        android:layout_below="@+id/textView"
        android:textSize="18dp"
        android:layout_gravity="center_vertical|center_horizontal"
        android:background="@drawable/button"
        android:onClick="clickLibraryApp"/>
    <Space
        android:layout_width="match_parent"
        android:layout_height="5dp" />
    <Button
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:text="@string/build_it_bigger"
        android:id="@+id/button3"
        android:layout_below="@+id/textView"
        android:textSize="18dp"
        android:layout_gravity="center_vertical|center_horizontal"
        android:background="@drawable/button"
        android:onClick="clickBuildItBiggerApp"/>
    <Space
        android:layout_width="match_parent"
        android:layout_height="5dp" />
    <Button
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:text="@string/xyz_reader"
        android:id="@+id/button4"
        android:layout_below="@+id/textView"
        android:textSize="18dp"
        android:layout_gravity="center_vertical|center_horizontal"
        android:background="@drawable/button"
        android:onClick="clickXYZReader"/>
    <Space
        android:layout_width="match_parent"
        android:layout_height="5dp" />
    <Button
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:text="@string/capstone_my_own_app"
        android:id="@+id/button5"
        android:layout_below="@+id/textView"
        android:textSize="18dp"
        android:layout_gravity="center_vertical|center_horizontal"
        android:background="@drawable/button_capstone"
        android:onClick="clickCapstone"/>

</LinearLayout>
